<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="341.0" prefWidth="473.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="simpleSettings.SettingController">
   <AnchorPane prefHeight="414.0" prefWidth="474.0" style="-fx-background-color: #202b3c;">
      <children>
          <Button fx:id="darkBtn" layoutX="211.0" layoutY="72.0" onAction="#handleDarkButtonAction" prefHeight="18.0" prefWidth="80.0" text="Dark Theme" />
          <Button fx:id="lightBtn" layoutX="327.0" layoutY="72.0" onAction="#handleLightButtonAction" text="Light Theme" />
         <Label fx:id="themeLbl" layoutX="39.0" layoutY="71.0" prefHeight="26.0" prefWidth="102.0" text="Theme:" textFill="WHITE">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Label layoutX="39.0" layoutY="167.0" text="Languages" textFill="WHITE">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <!-- Replaced TextField with ComboBox -->
         <ComboBox fx:id="comboLang" layoutX="211.0" layoutY="164.0" prefHeight="26.0" prefWidth="197.0" />
         <Button fx:id="savebtn" layoutX="185.0" layoutY="237.0" mnemonicParsing="false" onAction="#handleSaveButton" prefHeight="26.0" prefWidth="102.0" text="save">
            <font>
               <Font name="Arial" size="14.0" />
            </font>
         </Button>
         <Button layoutX="212.0" layoutY="292.0" mnemonicParsing="false" onAction="#switchSceneDarkHome" text="Home" />
      </children>
   </AnchorPane>
</VBox>
